<div class="container">
  <%= form_for @logs do |f| %>
    <div class="row">
      <div class="form-group col-sm-4">
        <%= f.label :student_id %>
        <%= f.collection_select(:student_id, Student.all, :id, :first, {}, { class: "form-control" }) %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label :teacher_id %>
        <%= f.collection_select(:teacher_id, Teacher.all, :id, :first, {}, { class: "form-control" }) %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label :date %>
        <%= f.date_field :date, class: "form-control", value: Date.today %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-4">
        <%= f.label :book_id %>
        <%= f.collection_select(:book_id, Book.all, :id, :title, { include_blank: true }, { class: "form-control" }) %>
      </div>
      <div class="form-group col-sm-4">
        <%= link_to "Add new book",  new_book_path, class: "btn btn-default" %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-12">
        <%= label(:log, :reading) %>
        <%= text_area(:log, :reading, class: "form-control") %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-12">
        <%= label(:log, :writing) %>
        <%= text_area(:log, :writing, class: "form-control") %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-12">
        <%= label(:log, :math) %>
        <%= text_area(:log, :math, class: "form-control") %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-12">
        <%= label(:log, :science) %>
        <%= text_area(:log, :science, class: "form-control") %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-12">
        <%= label(:log, :social_studies) %>
        <%= text_area(:log, :social_studies, class: "form-control") %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-12">
        <%= f.submit "Add Log", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
