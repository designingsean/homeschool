<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Add New Record</h1>
    </div>
  </div>
  <%= form_for @logs do |f| %>
    <div class="row">
      <div class="form-group col-sm-4">
        <%= f.label :student_id %>
        <%= f.collection_select(:student_id, Student.all, :id, :first, {}, { class: "form-control" }) %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label :teacher_id %>
        <%= f.collection_select(:teacher_id, Teacher.all, :id, :first, {}, { class: "form-control" }) %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label :date %>
        <%= f.date_field :date, class: "form-control", value: Date.today %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-12">
        <h2>Reading</h2>
        <%= label(:log, :description) %>
        <%= text_area(:log, :reading, class: "form-control") %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label :book_id %>
        <%= collection_select(:log, :reading_book_id, Book.where(:subject_id => [nil, 1]), :id, :title, { include_blank: true }, { class: "form-control" }) %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-12">
        <h2>Writing</h2>
        <%= label(:log, :description) %>
        <%= text_area(:log, :writing, class: "form-control") %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label :book_id %>
        <%= collection_select(:log, :writing_book_id, Book.where(:subject_id => 2), :id, :title, { include_blank: true }, { class: "form-control" }) %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-12">
        <h2>Math</h2>
        <%= label(:log, :description) %>
        <%= text_area(:log, :math, class: "form-control") %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label :book_id %>
        <%= collection_select(:log, :math_book_id, Book.where(:subject_id => 3), :id, :title, { include_blank: true }, { class: "form-control" }) %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-12">
        <h2>Science</h2>
        <%= label(:log, :description) %>
        <%= text_area(:log, :science, class: "form-control") %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label :book_id %>
        <%= collection_select(:log, :science_book_id, Book.where(:subject_id => 4), :id, :title, { include_blank: true }, { class: "form-control" }) %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-12">
        <h2>Social Studies</h2>
        <%= label(:log, :description) %>
        <%= text_area(:log, :social_studies, class: "form-control") %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label :book_id %>
        <%= collection_select(:log, :social_studies_book_id, Book.where(:subject_id => 5), :id, :title, { include_blank: true }, { class: "form-control" }) %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-12">
        <%= f.submit "Add Log", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
