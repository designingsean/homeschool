<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= link_to "New", new_log_path, class: "btn btn-primary pull-right" %>
      <h1>Homeschool Log <small><%= @count %> total days</small></h1>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Subject</th>
            <th>Teacher</th>
            <th>Date</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
        <% @logs.each do |log| %>
          <tr>
            <td><%= log.subject.subject %></td>
            <td><%= log.teacher.first %></td>
            <td><%= log.date %></td>
            <td><% if log.book %>&ldquo;<%= log.book.title %>&rdquo; by <%= log.book.author %><br><% end %><%= simple_format(log.description) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
