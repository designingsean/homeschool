<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Edit Book</h1>
    </div>
  </div>
  <%= form_for @book do |f| %>
    <div class="row">
      <div class="form-group col-sm-4">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label :author %>
        <%= f.text_field :author, class: "form-control" %>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label :subject_id %>
        <%= f.collection_select(:subject_id, Subject.last(4), :id, :subject, { include_blank: true }, { class: "form-control" }) %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-12">
        <%= f.submit "Edit Book", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
