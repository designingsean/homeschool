<div class="container">
  <%= form_for @books do |f| %>
    <div class="row">
      <div class="form-group col-sm-6">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group col-sm-6">
        <%= f.label :author %>
        <%= f.text_field :author, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-sm-12">
        <%= f.submit "Add Book", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
